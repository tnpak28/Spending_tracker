# Hong Kong Open Banking API Configuration
# Register as a Third Party Provider (TPP) with HKMA to obtain these credentials
EXPO_PUBLIC_HK_OPEN_BANKING_CLIENT_ID=your_client_id_here
EXPO_PUBLIC_HK_OPEN_BANKING_CLIENT_SECRET=your_client_secret_here

# Environment Configuration
# Options: 'sandbox' for development, 'production' for live banking
EXPO_PUBLIC_ENVIRONMENT=sandbox

# API Base URLs (replace with actual Hong Kong Open Banking URLs)
EXPO_PUBLIC_HK_OPEN_BANKING_SANDBOX_URL=https://sandbox.api.openbanking.hk/v1
EXPO_PUBLIC_HK_OPEN_BANKING_PRODUCTION_URL=https://api.openbanking.hk/v1

# OAuth Configuration
EXPO_PUBLIC_OAUTH_REDIRECT_URI=spendingtracker://auth/callback
EXPO_PUBLIC_OAUTH_SCOPES=accounts,balances,transactions

# Speech Recognition Configuration (optional - for cloud-based speech services)
# If using Google Cloud Speech-to-Text
EXPO_PUBLIC_GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key

# If using Azure Speech Services
EXPO_PUBLIC_AZURE_SPEECH_KEY=your_azure_speech_key
EXPO_PUBLIC_AZURE_SPEECH_REGION=your_azure_region

# App Configuration
EXPO_PUBLIC_APP_NAME=Spending Tracker HK
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_SUPPORT_EMAIL=support@spendingtracker-hk.com

# Feature Flags (optional)
EXPO_PUBLIC_ENABLE_VOICE_INPUT=true
EXPO_PUBLIC_ENABLE_BANK_SYNC=true
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_DEBUG_MODE=false

# Analytics Configuration (optional)
# If using Firebase Analytics
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id

# Push Notifications (optional)
# If using Expo Push Notifications
EXPO_PUBLIC_EXPO_PROJECT_ID=your_expo_project_id